
<algo>
<params>
<param name = "N" type = "int" value = "3"></param>
</params>

<block id="0" dims="2">
<arg name = "I" val = "1..N"></arg>
<arg name = "J" val = "1..2^N"></arg>

<vertex condition = "(J - 1) % (2^I) < 2^(I - 1)" type = "1">
<in src = "I - 1, J"></in>
<in src = "I - 1, J + 2^(I -1)"></in>
</vertex>

<vertex condition = "(J - 1) % (2^I) >= 2^(I - 1)" type = "2">
<in src = "I - 1, J"></in>
<in src = "I - 1, J - 2^(I - 1)"></in>
</vertex>

</block>
</algo>
